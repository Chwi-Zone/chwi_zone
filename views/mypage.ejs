      <!--페이지 내용 -->
      <h1>MY PAGE</h1>
         <span>이름 : </span>
         <span id = "name"> </span><br>
         <span>이메일 : </span>
         <span id = "email"></span>
         <section id="categoryList"></section>
      
      <section id="userList"></section>
      <!-- Footer -->
      <section id="footer">
    </section>
 </div>

 <!-- Scripts -->
 <script src="../js/jquery-3.2.1.min.js"></script>
 <script src="../js/browser.min.js"></script>
 <script src="../js/breakpoints.min.js"></script>
 <script src="../js/util.js"></script>
 <script src="../js/main.js"></script>
   <script>
       var email_address = sessionStorage.getItem("email");
       userInfo();
         function userInfo() {
            $.ajax({
               url: "/mypage/user",
               type: "GET",
               data: {
                 email_address: email_address,
               },
               success: function (data) {
                  console.log(data);
                  console.log(data[1].length);
                //   for(var j = 0 ; j < data.length; j++){
                //       for(var k = 0; k <data[j].length; k++) {
                //           console.log(data[j][k]);
                //       }
                //   }
                  $("#name").text(data[0][0].user_name);
                  $("#email").text(data[0][0].email_address);
                
                  for (var i = 0; i < data[1].length; i++) {
                     var dataElement = data[1][i];
                     $("#userList").append(
                        '<h1>' + dataElement.youtube_category + '</h1>'+
                        '<span>'+ dataElement.sub_count + '</span>');
                  }
               },
            });
         }

   </script>

